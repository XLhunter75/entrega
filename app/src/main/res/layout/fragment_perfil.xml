<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Shop.FragmentProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/profile_image_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="246dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/profile_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="95dp"
            android:text="TextView"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:background="@color/white_gray"
        android:textSize="20dp"
        android:text="@string/transactions" />

    <Button
        android:id="@+id/btBought"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:padding="15dp"
        android:drawableStart="@drawable/ic_bought"
        android:drawableEnd="@drawable/ic_foward"
        android:drawablePadding="10dp"
        android:text="@string/bought" />

    <Button
        android:id="@+id/btSold"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:padding="15dp"
        android:drawableStart="@drawable/ic_sold"
        android:drawableEnd="@drawable/ic_foward"
        android:drawablePadding="10dp"
        android:text="@string/sold" />

    <Button
        android:id="@+id/btWallet"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:padding="15dp"
        android:drawableStart="@drawable/ic_wallet"
        android:drawablePadding="10dp"
        android:text="@string/wallet" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:background="@color/white_gray"
        android:textSize="20dp"
        android:text="@string/operation_product" />

    <Button
        android:id="@+id/btYourProducts"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:padding="15dp"
        android:drawableStart="@drawable/ic_product"
        android:drawableEnd="@drawable/ic_foward"
        android:drawablePadding="10dp"
        android:text="@string/your_product" />


    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:background="@color/white_gray"
        android:textSize="20dp"
        android:text="@string/configuration" />

    <Button
        android:id="@+id/btConfiguration"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:padding="15dp"
        android:drawableStart="@drawable/ic_configuration"
        android:drawableEnd="@drawable/ic_foward"
        android:drawablePadding="10dp"
        android:text="@string/configuration_account" />
    <Button
        android:id="@+id/btExit"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:padding="15dp"
        android:drawableStart="@drawable/ic_exit_account"
        android:drawableEnd="@drawable/ic_foward"
        android:drawablePadding="10dp"
        android:text="@string/exit_account" />



</LinearLayout>